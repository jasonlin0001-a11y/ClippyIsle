{
  "hosting": {
    "public": "web/out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    
    // ğŸ”¥ é—œéµä¿®æ­£ï¼šåŠ å…¥é€™è¡Œï¼
    // é€™æœƒå‘Šè¨´ Firebaseï¼š"ç•¶æœ‰äººè¨ªå• /dashboard æ™‚ï¼Œè«‹è‡ªå‹•é–‹å•Ÿ dashboard.html"
    "cleanUrls": true,

    // ğŸ‘‡ é€™é‚Šä¿ç•™æ‚¨åŸæœ¬çš„è¨­å®š (ä¸ç”¨å‹•)
    "rewrites": [
      {
        "source": "/u/**",
        "destination": "/index.html"
      },
      {
        "source": "/s/**",
        "destination": "/index.html"
      },
      {
        "source": "/article/**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/.well-known/apple-app-site-association",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ]
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}